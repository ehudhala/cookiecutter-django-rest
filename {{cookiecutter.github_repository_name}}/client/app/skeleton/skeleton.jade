{% raw %}
nav.navbar.navbar-default(role='navigation')
    .container
        .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar-items', aria-expanded='false')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar

            a.navbar-brand(href='/')
                i.fa.fa-pie-chart
                | {% endraw %} {{cookiecutter.app_title}} {% raw %}

        #navbar-items.collapse.navbar-collapse
            ul.nav.navbar-nav
                li
                    a(ui-sref="home")
                        i.fa Home
                li
                    a(ui-sref="search")
                        i.fa Search
                li
                    a(ui-sref="chat")
                        i.fa Chat

            ul.nav.navbar-nav.navbar-right(ng-controller='AuthController as authVm')
                li(ng-if='!authVm.isLoggedIn()')
                    a(href='', ng-click='authVm.openLoginModal()')
                        i.fa Login

                li(uib-dropdown, ng-if='authVm.isLoggedIn()')
                    a(uib-dropdown-toggle, href='')
                        i.fa
                            | Welcome, {{ authVm.user.username }}&nbsp;
                            i.fa-caret-down
                    ul.dropdown-menu(uib-dropdown-menu, role='menu')
                        li(role='menuitem')
                            a(href='', ng-click='authVm.logOut()') Logout
                        //li.divider


.container
    div#wrapper(ui-view)
{% endraw %}

