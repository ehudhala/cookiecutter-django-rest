{% raw %}

.modal-header
    button.close(type='button', aria-label='Close', ng-click='loginVm.close()')
        i.fa.fa-times
    h3.modal-title Login

form(name='loginVm.loginForm', ng-submit='loginVm.login(loginVm.credentials)', novalidate)
    .modal-body
        .input-group(ng-class="{'has-error': loginVm.loginForm.username.$invalid && loginVm.loginForm.username.$dirty}")
            span.input-group-addon
                i.fa.fa-user
            input.form-control(ng-model='loginVm.credentials.username', name='username', placeholder='Username', required)
        br
        .input-group(ng-class="{'has-error': loginVm.loginForm.password.$invalid && loginVm.loginForm.password.$dirty}")
            span.input-group-addon
                i.fa.fa-lock
            input.form-control(ng-model='loginVm.credentials.password', type='password', name='password', placeholder='Password', required)

        .text-danger(ng-show="loginVm.loginForm.$message && loginVm.loginForm.$pristine")
            br
            p {{ loginVm.loginForm.$message }}

    .modal-footer
        button.btn.btn-warning(type='button', ng-click='loginVm.close()') Cancel
        button.btn.btn-primary(type='submit', name='submit', ng-disabled='!loginVm.loginForm.$valid') Login

{% endraw %}